{
    "name": "booktrack/app",
    "description": "BookTrack - Book and Author Management System",
    "keywords": ["yii2", "framework", "book", "author", "management"],
    "homepage": "https://booktrack.local/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "yiisoft/yii2": "~2.0.50",
        "yiisoft/yii2-bootstrap5": "~2.0.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "yiisoft/yii2-swiftmailer": "~2.1"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.1.0",
        "yiisoft/yii2-gii": "~2.2.0",
        "yiisoft/yii2-faker": "~2.0.0",
        "phpunit/phpunit": "~9.5.0",
        "codeception/codeception": "^5.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "cs": "phpcs --standard=PSR12 --extensions=php ./",
        "stan": "phpstan analyse --level=6 ./",
        "test": "codecept run",
        "audit": "composer audit"
    }
}
